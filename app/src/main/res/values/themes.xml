<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dawid Kubiak (S1717751) -->
    <!-- Base application theme. -->
    <style name="Theme.MPDCoursework" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brown_main</item>
        <item name="colorPrimaryVariant">@color/brown_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.MPDCoursework.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MPDCoursework.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MPDCoursework.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>